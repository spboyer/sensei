---
interface Props {
  title?: string;
  description?: string;
}

const { title = 'Sensei', description = 'Stop skill collisions. Iteratively improve skill frontmatter compliance using the Ralph loop pattern.' } = Astro.props;
const canonicalURL = 'https://spboyer.github.io/sensei';
const ogImage = 'https://spboyer.github.io/sensei/og-image.png';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/sensei/favicon.svg" />
    <link rel="icon" href="/sensei/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImage} />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-black text-light-gray font-sans antialiased">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
